@model IEnumerable<BOL.tbl_ChildInfo>

@{
    ViewBag.Title = " ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

@if (TempData["Msg"] != null)
{
    <h3>@TempData["Msg"].ToString()</h3>
}

@using (Html.BeginForm())
{


    <div class="row">
        @foreach (var item in Model)
        {



            <div class="col-sm-4 col-lg-4 col-md-4">


                <div class="thumbnail">
                    <a href="@Url.Action("Display", "MissingChild"  ,new {SortOrder =item.ChildId })" class="links">
                        <img alt="" src="~/images/@Html.DisplayFor(modelItem => item.imageUrl )" width="150" height="200" )">

                    </a>
                    <div class="pull-right">
                        <h5> Name: @item.ChildName</h5>
                        <h5>Age:  @item.Age</h5>
                        <h5>Father Name:  @item.Father_Name</h5>
                    </div>
                    <h6>Missing Date  @item.Child_Missing_Date_Time </h6>
                    @*@{ if (@User.Identity.Name == item.PoliceStationEmail)
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.ChildId })
                        }

                    }*@

                    @*@{ if (@User.Identity.Name == item.PoliceStationEmail)
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.ChildId })
                            }

                        }*@

                </div>
            </div>


                        }
    </div>

                        }



@{
    double TotalPage = @ViewBag.TotalPages;
}
@for (int i = 1; i <= TotalPage; i++)
{
    if (i == ViewBag.Page)
    {
        <b>
            | @Html.ActionLink(i.ToString() + " ", "Index", new { Page = i, @class = "text-danger" })|

        </b>
    }
    else
    {
        @Html.ActionLink(i.ToString() + " ", "Index", new { Page = i, @class = "text-danger" })

    }
}